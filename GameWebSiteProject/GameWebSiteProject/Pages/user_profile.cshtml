@page
@model GameWebSiteProject.Pages.user_profileModel
@{
}
@using Microsoft.AspNetCore.Http;
<div class="main">
    <div class="profile-wrap">
        <div class="profile-title">
            <div class="profile-avatar-box">
                <div class="profile-avatar">
                    <img src="~/avatars/@Model.Avatar" height="200px" width="200px" />
                </div>
                <input type="file" class="profile-avatar-changebutton" />
                <div>
                    <a class="profile-avatar-changebutton" type="button" href="user_profile_edit.html">Edit profile</a>
                </div>
            </div>
            <div class="profile-name">
                <h1>@HttpContext.Session.GetString("username")</h1>
            </div>
        </div>
        <div class="profile-info">
            <h5 class="age">Nickname in game: @Model.Nickname</h5>
            <h5 class="age">Age: @Model.Age years</h5>
            <h5 class="sex">Sex: @Model.Sex</h5>
        </div>
        <div class="character-box">
            @Model.About
        </div>
    </div>
</div>