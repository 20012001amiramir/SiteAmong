@page
@model GameWebSiteProject.Pages.user_profileModel
@{
    ViewData["Title"] = "YOUR PROFILE";
}
@using Microsoft.AspNetCore.Http;
<div class="main">
    <div class="profile-wrap">
        <div class="profile-title">
            <div>
                <div class="profile-avatar">
                    <img src="data:image/jpeg; base64, @(Convert.ToBase64String(Model.Avatar))" width="315px" />
                </div>
                <div>
                    <div id="profileButtons">
                        <a class="profile-avatar-changebutton" type="button" asp-page="User_profile_edit">Edit profile</a>
                        <a class="profile-avatar-changebutton" type="button" asp-page="MyWorks">My works</a>
                        <a class="profile-avatar-changebutton" type="button" asp-page="PublishWork">Publish your new work</a>
                    </div>                                   
                </div>
            </div>
            <div class="profile-name">
                <h1>@HttpContext.Session.GetString("username")</h1>
            </div>

        </div>
        <div class="profile-info">
            <h5 class="age">Nickname in game: @Model.Nickname</h5>
            <h5 class="age">Age: @Model.Age years</h5>
            <h5 class="sex">Sex: @Model.Sex</h5>

        </div>
        <div class="character-box">
            <label for="exampleFormControlSelect1">About You</label>
            <textarea id="aboutProfile" disabled class="form-control">@Model.About</textarea>
        </div>
    </div>
</div>
