<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="https://img.icons8.com/nolan/40/among-us.png" type="image/svg">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Home</title>
</head>
<body>
    <div class="navbar-img" id="headpic">
        <div class="sitename-layout">
            <h1>HOME</h1>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="home_reg.html">AMONGPROFILE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse navbar" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="home_reg.html">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="chat.html">Forum</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="costumes_reg.html">Costumes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="gallery_reg.html">Gallery</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="about_reg.html">About</a>
                </li>
            </ul>
        </div>
        <div>
            <div class="search-wrapper">
                <form>
                    <input type="text" name="focus" required class="search-box" placeholder="Search" />
                </form>
            </div>
            <a asp-page="/user-profile" class="my-profile">
                <div class="my-profile-name">
                    My Profile
                </div>
                <img src="https://img.icons8.com/plasticine/100/000000/among-us.png" class="my-profile-pic" height="45" width="45" />

            </a>
            <a asp-page="index" asp-page-handler="logout">
                Logout
            </a>
        </div>
        
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <div class="footer-objects">
            <div class="footer-object">email</div>
            <a href="#" class="footer-object">tg</a>
            <a href="#" class="footer-object">vk</a>
            <div class="footer-object phone">phone number</div>
        </div>
    </div>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
